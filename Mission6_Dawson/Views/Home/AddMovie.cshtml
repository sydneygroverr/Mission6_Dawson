
@model Movie

    <h2>Movie Information Form</h2>

    <form method="post">

        <label asp-for="Category">Category:</label><br>
        <select asp-for="Category" required>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="Drama">Drama</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Comedy">Comedy</option>
        <option value="Family">Family</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="VHS">VHS</option>
        </select><br><br>

        <label asp-for="Title">Title:</label><br>
        <input asp-for="Title" required /><br><br>

        <label asp-for="Year">Year:</label><br>
        <input asp-for="Year" required/><br><br>

        <label asp-for="Director">Director:</label><br>
        <input asp-for="Director" required/><br><br>

        <label asp-for="Rating">Rating:</label><br>
        <select asp-for="Rating" required>
            <option>Select</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br><br>

        <label asp-for="Edited">Edited:</label><br>
        <select asp-for="Edited">
            <option>Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br><br>

        <label asp-for="Lent_to">Lent To:</label><br>
        <input asp-for="Lent_to"/><br><br>

        <label asp-for="Notes">Notes (Max 25 characters):</label><br>
        <input asp-for="Notes" maxlength="25"/><br><br>

        <input type="submit" value="Submit">    
    </form>
